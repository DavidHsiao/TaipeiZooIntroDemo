<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="plant"
                type="android.example.com.taipeizoointrodemo.networkApi.PlantResults"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="150dp">

        <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/iv_plant"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="8dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="8dp"
                app:imageUrl="@{plant.imgSrcUrl}"
                android:scaleType="centerCrop"
        />
        <TextView
                android:id="@+id/tv_plant_name"
                android:text="@{plant.f_Name_Ch}"
                android:layout_width="200dp"
                android:layout_height="40dp"
                app:layout_constraintStart_toEndOf="@+id/iv_plant"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toTopOf="@+id/iv_plant"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"/>
        <TextView
                android:id="@+id/tv_also_known"
                android:text="@{plant.f_AlsoKnown}"
                android:layout_width="200dp"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="@+id/tv_plant_name"
                app:layout_constraintBottom_toBottomOf="@+id/iv_plant"
                android:layout_marginBottom="16dp"
                app:layout_constraintEnd_toEndOf="@+id/tv_plant_name"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>